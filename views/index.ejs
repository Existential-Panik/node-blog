<div class="author">
    <h1 class="author__heading"> Hi, I am Suyash.</h1>
    <p class="author__body">Writer and Guitarist.</p>
</div>

<img src="/img/deafheaven.jpeg" alt="person looking out the window" srcset="" class="hero-image">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">
        <% posts.forEach(post => {%>

        <li><a href= "/post/<%= post._id %>" >
                <span><%= post.title %></span>
                <span class="article-list__date">
                    <%= post.createdAt.toDateString() %>
                </span>
            </a></li>

        <% }); %>
    </ul>

    <% if (nextPage !== null) { %>
         <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
   
</section>